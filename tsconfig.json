{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "ES2022",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "outDir": "dist",  // 指定输出目录
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
